{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "flux": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "assignees": [
    "druwan"
  ],
  "labels": [
    "deps"
  ],
  "reviewers": [
    "druwan"
  ],
  "packageRules": [
    {
      "description": "Only allow proper semver tags for LinuxServer/qBittorrent",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "linuxserver/qbittorrent",
        "ghcr.io/linuxserver/qbittorrent"
      ],
      "extractVersion": "^(?<version>\\d+\\.\\d+\\.\\d+)(?:-r\\d+-ls\\d+)?$",
      "versioning": "semver"
    },
    {
      "description": "Enable OCI Helm chart updates for Seerr",
      "matchDatasources": [
        "oci"
      ],
      "matchManagers": [
        "helm"
      ],
      "extractVersion": "^(?<version>\\d+\\.\\d+\\.\\d+)$",
      "versioning": "semver"
    }
  ]
}

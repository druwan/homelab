{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "flux": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "assignees": [
    "druwan"
  ],
  "labels": [
    "deps"
  ],
  "reviewers": [
    "druwan"
  ],
  "packageRules": [
    {
      "description": "Only allow proper semver tags for LinuxServer/qBittorrent",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "linuxserver/qbittorrent",
        "ghcr.io/linuxserver/qbittorrent"
      ],
      "extractVersion": "^(?<version>\\d+\\.\\d+\\.\\d+)$",
      "allowedTags": [
        "\\d+\\.\\d+\\.\\d+"
      ],
      "versioning": "semver"
    }
  ]
}
